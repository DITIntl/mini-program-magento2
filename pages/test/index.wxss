page {
    background: #fff;
}

.header-wrapper {
    height: 120rpx;
    padding: 20rpx;
    position: fixed;
    top: 0;
    width: 100%;
}

.header-wrapper .header {
    position: relative;
    z-index: 2;
}

.header-wrapper .header .search {
    float: left;
    width: calc( 100% - 80rpx );
}

.header-wrapper .header .search .input-box {
    background: #fff;
    border: 0;
    height: 80rpx;
    padding: 10rpx 20rpx;
    position: relative;
}

.header-wrapper .header .search .input-box input {
    background: #fff;
    height: 60rpx;
    width: calc( 100% - 60rpx );
}

.header-wrapper .header .search .input-box .btn-search {
    background: #fff;
    color: #545454;
    display: block;
    height: 80rpx;
    line-height: 80rpx;
    padding: 0;
    position: absolute;
    right: 0;
    text-align: center;
    top: 0;
    width: 80rpx;
}

.header-wrapper .header .search .input-box .btn-search span::after {
    content: '\f002';
}

.header-wrapper .header .search .input-box .btn-search span {
    font-family: 'Icon Solid';
}

.header-wrapper .header .actions {
    float: right;
}

.header-wrapper .header .actions .btn-add {
    border: 2rpx solid #545454;
    border-radius: 50%;
    height: 50rpx;
    line-height: 48rpx;
    margin: 20rpx 0rpx 0 0;
    text-align: center;
    width: 50rpx;
}

.header-wrapper .header .actions .btn-add::before {
    content: '\f067';
    display: inline;
    font-family: 'Icon Solid';
    position: relative;
}

.header-wrapper .header .actions::after {
    clear: both;
    content: '';
    display: table;
    height: 0;
}

.header-wrapper .header::after {
    clear: both;
    content: '';
    display: table;
    height: 0;
}

.header-wrapper::after {
    background: #f0f0f0;
    bottom: 0;
    content: '';
    display: block;
    left: 0;
    opacity: 1;
    position: absolute;
    right: 0;
    top: 0;
    z-index: 1;
}

.main-wrapper {
    margin: 120rpx 0 0;
}

.record .img {
    float: left;
    padding: 20rpx 30rpx 20rpx 20rpx;
    width: 150rpx;
}

.record .img image {
    background: #f0f0f0;
    border-radius: 10rpx;
    display: block;
    height: 100rpx;
    width: 100rpx;
}

.record .info {
    border-bottom: 1rpx solid #eee;
    float: left;
    height: 140rpx;
    line-height: 40rpx;
    padding: 30rpx 30rpx 30rpx 0;
    width: calc( 100% - 150rpx );
}

.record .info .box {
    float: left;
    width: calc( 100% - 120rpx );
}

.record .info .box .name {
    color: #555;
    font-size: 32rpx;
    line-height: 48rpx;
}

.record .info .box .age {
    color: #999;
    font-size: 26rpx;
    line-height: 32rpx;
}

.record .info .date {
    color: #999;
    float: right;
    font-size: 24rpx;
    line-height: 40rpx;
    text-align: right;
    width: 120rpx;
}

.record .info::after {
    clear: both;
    content: '';
    display: table;
    height: 0;
}

.record::after {
    clear: both;
    content: '';
    display: table;
    height: 0;
}

.no-record {
    padding: 40rpx;
    text-align: center;
}
