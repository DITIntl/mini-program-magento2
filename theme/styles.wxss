page {
    background: #fff;
    color: #545454;
    font: 32rpx/52rpx arial, sans-serif;
}

view, text, button, input, textarea, picker {
    box-sizing: border-box;
}

button {
    background: #9CCC65;
    border: 0;
    border-radius: 10rpx;
    color: #fff;
    display: inline-block;
    font: 28rpx/40rpx arial, sans-serif;
    padding: 10rpx 20rpx;
}

button::after {
    border: 0;
}

input, textarea {
    background: #fff;
    font: 28rpx/36rpx arial, sans-serif;
    height: 40rpx;
    width: 100%;
}

textarea {
    height: 108rpx;
}

picker {
    color: #bdbdbd;
}

.input-placeholder {
    color: #bdbdbd;
}

.input-box {
    background: #fff;
    border: 1rpx solid #c5e1a5;
    border-radius: 10rpx;
    padding: 8rpx 16rpx;
}

.header-wrapper {
    position: relative;
    z-index: 3;
}

.main-wrapper {
    position: relative;
    z-index: 2;
}

.footer-wrapper {
    position: relative;
    z-index: 1;
}
